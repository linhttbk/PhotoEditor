<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>
    <RelativeLayout
            android:padding="@dimen/padding_normal"
            android:background="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:padding="2dp"
                android:background="@drawable/bg_rounded_corner_blue"
                android:layout_centerInParent="true"
                android:id="@+id/rlAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView

                    android:padding="@dimen/padding_small"
                    android:background="@color/active_blue"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_add_photo"
                    android:id="@+id/gpuBlend"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/item_blend_size_60dp"
                    android:layout_height="@dimen/item_blend_size_60dp"/>
        </RelativeLayout>

        <TextView
                android:layout_marginTop="@dimen/margin_big"
                android:layout_below="@+id/rlAdd"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:text="Gallery"
                android:id="@+id/tvTitle"
                android:textSize="@dimen/text_size_tiny"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</layout>