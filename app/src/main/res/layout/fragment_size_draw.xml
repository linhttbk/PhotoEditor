<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="viewModel" type="com.linhtt.photoeditor.view.draw.DrawViewModel"/>
    </data>
    <RelativeLayout
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:padding="@dimen/padding_normal"
                android:src="@drawable/icon_draw"
                android:layout_marginLeft="@dimen/margin_normal"
                android:id="@+id/imvChange"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <SeekBar
                android:layout_toRightOf="@+id/imvChange"
                android:progress="50"
                android:layout_centerInParent="true"
                android:splitTrack="false"
                android:layout_marginRight="@dimen/margin_big"
                android:progressDrawable="@drawable/edit_seekbar_progress"
                android:id="@+id/seekBar"
                android:thumbOffset="5dp"
                android:thumb="@drawable/custom_thumb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</layout>