<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="viewModel" type="com.linhtt.photoeditor.view.rotate.ShadowViewModel"/>
    </data>
    <RelativeLayout
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_rcv_130" >
        <ImageView
                android:id="@+id/imvClose"
                android:src="@drawable/ic_close"
                android:padding="@dimen/padding_large"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView
                android:id="@+id/imvApply"
                android:src="@drawable/ic_apply"
                android:padding="@dimen/padding_large"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <RelativeLayout
                android:layout_below="@+id/imvClose"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <SeekBar
                    android:progress="50"
                    android:layout_centerInParent="true"
                    android:splitTrack="false"
                    android:layout_marginRight="@dimen/margin_big"
                    android:layout_marginLeft="@dimen/margin_big"
                    android:progressDrawable="@drawable/edit_seekbar_progress"
                    android:id="@+id/seekBar"
                    android:thumbOffset="5dp"
                    android:thumb="@drawable/custom_thumb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
</layout>
